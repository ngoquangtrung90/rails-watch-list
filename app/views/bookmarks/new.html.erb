<h1>New bookmark</h1>
<div class="container">
  <h2>Movies</h2>
  <% @movies.each do |movie| %>
    <p><%= "#{movie.id} #{movie.title}" %></p>
  <% end %>
</div>
<div class="container">
  <%= simple_form_for [@list, @bookmark] do |f| %>
    <%= f.input :comment %>
    <%= f.association :movie %>
    <%= f.submit %>
  <% end %>
</div>
<%= link_to 'Get back to list', root_path %>
